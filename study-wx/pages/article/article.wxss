/* article.wxss */

.article-container {
    padding: 80rpx;
  }
  
  .article-title {
    font-size: 48rpx;
    font-weight: bold;
    margin-bottom: 30rpx;
  }
  
  .divider {
    border-bottom: 1rpx solid #ccc;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 20rpx;
  }
  
  .create-time {
    font-size: 28rpx;
    color: #888;
  }
  
  .cover {
    width: 100%;
    height: 300rpx;
    margin-bottom: 30rpx;
    margin-top: 20rpx;
  }
  
  .article-content {
    font-size: 28rpx;
    line-height: 40rpx;
    margin-bottom: 20rpx;
  }
  
  .read-num {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #888;
    margin-bottom: 20rpx;
  }
  
  .read-label {
    margin-right: 5rpx;
  }
  
  .reward-btn {
    background-color: #4CAF50;
    color: #fff;
    font-size: 28rpx;
    border: none;
    border-radius: 8rpx;
  }